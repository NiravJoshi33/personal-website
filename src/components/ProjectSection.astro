    description:
      "A business listings aggregator & acquisition management platform.",
    imageName: "smbmarket.webp",
    tags: ["Client Project", "Full Stack"],
    technologies: [
      "ReactJs",
      "NextJs",
      "Supabase",
      "ExpressJs",
      "Drizzle ORM",
      "Bootstrap",
      "Cloudflare",
      "Gemini",
    ],
    liveUrl: "https://smbmarket.com",
  },
  {
    title: "BeMySearch",
    description: "An AI Powered Product Recommendation Engine",
    imageName: "bemysearch.webp",
    tags: ["AI", "Full Stack"],
    technologies: [
      "SvelteJs",
      "TailwindCSS",
      "HonoJs",
      "Drizzle ORM",
      "PostgreSQL",
      "Python",
    ],
    liveUrl: "https://bemysearch.com",
  },
  {
    title: "Personal Website",
    description: "My personal website built with AstroJs",
    imageName: "personal-website.webp",
    tags: ["Static Site"],
    technologies: ["AstroJs", "TailwindCSS"],
    liveUrl: "https://niravjoshi.dev",
  },
  {
    title: "TaskSync",
    description: "An internal utility app for posting work updates to a slack channel as well as google sheets document from single form.",
