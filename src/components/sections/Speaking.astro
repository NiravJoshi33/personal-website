---
import Section from "../Section.astro"

import { speaking } from "@cv"
---

<Section title="Speaking & Workshops">
  <ul>
    {
      speaking?.map(
        ({ title, institution, location, date, image }) => {
          const eventDate = new Date(date)
          const formattedDate = eventDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{title}</h3>
                    <h4>{institution}</h4>
                    <p class="location">{location}</p>
                  </div>
                  <div>
                    <time 
                      datetime={date}
                      data-title={date}>
                      {formattedDate}
                    </time>
                  </div>
                </header>
                {image && (
                  <figure>
                    <img src={image} alt={`${title} at ${institution}`} />
                  </figure>
                )}
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #2e2f31;
    margin-bottom: 4px;
  }

  article h4 {
    color: #2e2f31;
    font-weight: 400;
    margin-bottom: 4px;
  }

  article .location {
    color: #2e2f31;
    font-size: 0.85rem;
    margin-bottom: 0;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
  }

  time {
    color: #2e2f31;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #2e2f31;
    color: #d6dbd9;
    font-size: .75rem;
    font-family: "SF Mono", "Cascadia Code", "JetBrains Mono", Consolas, Monaco, "Lucida Console", "Courier New", monospace;
    position: absolute;
    padding: .2rem .5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #2e2f31;
    opacity: 0;
    border: 1px solid #2e2f31;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  figure {
    margin: 0;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid #2e2f31;
  }

  figure img {
    width: 100%;
    height: auto;
    display: block;
    max-width: 500px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }

    header {
      flex-direction: column;
      gap: 8px;
    }
  }
</style>

